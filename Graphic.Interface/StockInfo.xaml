<Window x:Class="Graphic.Interface.StockInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic.Interface"
        mc:Ignorable="d"
        Title="StockInfo" Height="870" Width="500">
    <Grid>
        <Button Name="btnGetAssets" Content="Obter cotações atuais" Margin="125,756,125,47" Click="btnGetAssets_Click"/>
        <DataGrid Name="dgAssets" Width="450" Margin="25,21,25,133" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Price}" Width="125"/>
                <DataGridTextColumn Header="Tipo de Ativo" Binding="{Binding Type}" Width="150" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
